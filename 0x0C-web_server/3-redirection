#!/usr/bin/env bash
#Configures my Nginx server so that /redirect_me is redirecting to another page.

# Check if redirection configuration already exists
if ! grep -q "#location /redirect_me" /etc/nginx/sites-available/default; then
        sudo sed 's#server_name _;#server_name _;\n\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}#g' /etc/nginx/sites-available/default
fi

sudo service nginx restart
